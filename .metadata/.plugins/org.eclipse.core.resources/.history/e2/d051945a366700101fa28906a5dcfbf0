package decimal.a.binario;

public class decimalABinario {

	public static String conseguirRestos(int decimal) {
		String restos = "";
		int dividendo = decimal;
		
		if(decimal == 0) {
			return "" + 0;
		}
		
		if(decimal == 1) {
			return "" + 1;
		}
		
		while(dividendo != 1) {
			if (dividendo % 2 == 0) {
				restos = restos + "" + 0;
				dividendo = dividendo / 2;
			}else {
				restos = restos + "" + 1;
				dividendo = dividendo / 2;
			}
			return restos;
		}
	}
	
